@model MastersProject.Models.ClassEntity
@{
    ViewBag.Title = "Create";
}
<form role="form" id="FClass">
    <div class="card-body">
        <div class="form-group">
            @Html.Label("Select Course")
            <select class="form-control select2bs4" id="Course" name="Course">
                <option value="0">---Select Course---</option>
            </select>
            <br />
            @Html.HiddenFor(x => x.Courseid)
            @Html.HiddenFor(x => x.Classid)
            @Html.Label("Class Name")
            @Html.TextBoxFor(x => x.Classname, new { @class = "form-control" })
        </div>

    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <button type="button" onclick="SaveClass()" class="btn btn-primary">Save</button>
        <input type="reset" value="Clear" class="btn btn-primary">
    </div>
</form>